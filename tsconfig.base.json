{
  "compilerOptions": {
    "rootDir": ".",

    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["es2018", "dom"],
    "paths": {
      "@spica-server/*": ["./packages/*", "./apps/api/src/*"],
      "@spica/*": ["./apps/*"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist", "bazel-*"]
}
